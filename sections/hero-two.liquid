

<div class="hero hero2 hero2--aligned-{{ section.settings.hero_height }}">
    <div class="hero2__collection1">
    
        {%- if section.settings.image1 != blank -%}
        <img srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image1 | image_url: width: 165 }} 165w,{%- endif -%}
          {%- if section.settings.image1.width >= 360 -%}{{ section.settings.image1 | image_url: width: 360 }} 360w,{%- endif -%}
          {%- if section.settings.image1.width >= 535 -%}{{ section.settings.image1 | image_url: width: 535 }} 535w,{%- endif -%}
          {%- if section.settings.image1.width >= 750 -%}{{ section.settings.image1 | image_url: width: 750 }} 750w,{%- endif -%}
          {%- if section.settings.image1.width >= 1070 -%}{{ section.settings.image1 | image_url: width: 2000 }} 2000w,{%- endif -%}
          {%- if section.settings.image1.width >= 1500 -%}{{ section.settings.image1 | image_url: width: 2500 }} 2500w,{%- endif -%}
          {{ section.settings.image1 | image_url }} {{ section.settings.image1.width }}w"
            src="{{ section.settings.image1 | image_url: width: 2000 }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ section.settings.image1.alt | escape }}" loading="lazy" width="{{ section.settings.image1.width }}"
            height="{{ section.settings.image1.height }}" class="hero1__bg">
        {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
    
        {% assign opacity1 = section.settings.opacity1 | divided_by: 1000.00 %}
        
        <div class="hero2__content-container" style="background-color: {{section.settings.background1 | color_modify: 'alpha', opacity1}}">
            <div class="hero2__info">
                {%- if section.settings.button_label1 != blank -%}
        
                <a href="{{ section.settings.button_link1 }}" class="hero1__button" {{ section.shopify_attributes }}> {{
                    section.settings.button_label1 | escape }}
                </a>
        
                {%- endif -%}
            </div>
        </div>
    </div>


    <div class="hero2__collection2">

        {%- if section.settings.image2 != blank -%}
        <img srcset="{%- if section.settings.image2.width >= 165 -%}{{ section.settings.image2 | image_url: width: 165 }} 165w,{%- endif -%}
      {%- if section.settings.image2.width >= 360 -%}{{ section.settings.image2 | image_url: width: 360 }} 360w,{%- endif -%}
      {%- if section.settings.image2.width >= 535 -%}{{ section.settings.image2 | image_url: width: 535 }} 535w,{%- endif -%}
      {%- if section.settings.image2.width >= 750 -%}{{ section.settings.image2 | image_url: width: 750 }} 750w,{%- endif -%}
      {%- if section.settings.image2.width >= 1070 -%}{{ section.settings.image2 | image_url: width: 2000 }} 2000w,{%- endif -%}
      {%- if section.settings.image2.width >= 1500 -%}{{ section.settings.image2 | image_url: width: 2500 }} 2500w,{%- endif -%}
      {{ section.settings.image2 | image_url }} {{ section.settings.image2.width }}w"
            src="{{ section.settings.image2 | image_url: width: 2000 }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ section.settings.image2.alt | escape }}" loading="lazy"
            width="{{ section.settings.image2.width }}" height="{{ section.settings.image2.height }}"
            class="hero1__bg">
        {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}

        {% assign opacity2 = section.settings.opacity2 | divided_by: 1000.00 %}
        <div class="hero2__content-container" style="background-color: {{section.settings.background2 | color_modify: 'alpha', opacity2}}">
            <div class="hero2__info">
                {%- if section.settings.button_label2 != blank -%}
        
                <a href="{{ section.settings.button_link2 }}" class="hero2__button" {{ section.shopify_attributes }}> {{
                    section.settings.button_label2 | escape }}
                </a>
        
                {%- endif -%}
            </div>
        </div>
    </div>
</div>


{%- style -%}
.section-{{ section.id }}-padding {
padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
.section-{{ section.id }}-padding {
padding-top: {{ section.settings.padding_top }}px;
padding-bottom: {{ section.settings.padding_bottom }}px;
}
}


{%- endstyle -%}

